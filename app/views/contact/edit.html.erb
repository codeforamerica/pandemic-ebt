<% content_for(:template_name, "card") %>
<%= form_with url: contact_steps_path, method: :put, local: true do %>
  <%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaFormBuilder) do |f| %>
    <div class="form-card__header spacing-below-35">
      <div class="spacing-below-35">
        <%= image_tag('speech-balloon.svg', alt: 'a speech balloon with three dots') %>
      </div>
      <h2 class="form-card__title"><%= t("contact.header") %></h2>
    </div>
    <div class="form-card__content">
      <div class="grid">
        <div class="grid__item">
          <%= f.cfa_input_field(:email_address, t("contact.email_address"), help_text: t("contact.we_need_your_email") ) %>
        </div>
      </div>
      <div class="form-card__footer">
        <%= f.button t("shared.continue"), class: "button button--primary" %>
      </div>
    </div>
  <% end %>
<% end %>
