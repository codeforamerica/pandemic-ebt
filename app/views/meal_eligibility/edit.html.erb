<% content_for(:template_name, "card") %>
<%= form_with url: meal_eligibility_steps_path, method: :put, local: true do %>
  <%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaFormBuilder) do |f| %>
    <div class="form-card__header spacing-below-35">
      <div class="emoji emoji--bigger spacing-below-25 emoji--pita"></div>
      <h2 class="form-card__title">
        <%= t("meal_eligibility.header_question") %>
      </h2>
    </div>
    <div class="form-card__content">
      <div class="grid">
        <div class="grid__item">
          <p class="with-padding-small text--left">
            <%= t("meal_eligibility.header_answer_html") %>
        </div>
        <div class="form-card__footer">
          <%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaFormBuilder) do |f| %>
            <%= f.cfa_single_tap_button(
                    :is_eligible,
                    raw("<i class=\"button__icon emoji emoji--checkmark\"></i> #{t("shared.yes")}"),
                    :yes
                ) %>
            <%= f.cfa_single_tap_button(
                    :is_eligible,
                    raw("<i class=\"button__icon emoji emoji--crossmark\"></i> #{t("shared.no")}"),
                    :no
                ) %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>