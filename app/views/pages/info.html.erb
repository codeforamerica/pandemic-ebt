<div class="demo-banner">
  <%= t('shared.delay') %>
</div>
<div class="hero--food">
  <section class="slab slab--hero">
    <header class="main-header">
      <div class="toolbar toolbar--wrap-when-small">
        <div class="toolbar__left"></div>
        <div class="toolbar__right>">
          <%= render 'pages/locale' %>
        </div>
      </div>
    </header>
    <div class="grid">
      <div class="grid__item width-three-fourths">
        <h2 class="heading-60">
          <%= t("info.heading") %>
        </h2>
        <h1 class="text-25">
          <% if (ENV["COMING_SOON"] == "1") && !@is_early %>
            <%= t("index.apply_starting") %>
          <% else %>
            <%= t("index.apply_by") %>
          <% end %>
        </h1>
        <% if ENV["COMING_SOON"].blank? %>
          <%= render partial: 'apply_now', locals: { is_early: false } %>
        <% else %>
          <div class="button-spacer"></div>
        <% end %>
      </div>
    </div>
  </section>
