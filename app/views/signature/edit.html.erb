<% content_for(:template_name, "card") %>
<%= form_with url: signature_steps_path, method: :put, local: true do %>
  <%= fields_for(:form, @form, builder: Cfa::Styleguide::CfaFormBuilder) do |f| %>
    <div class="form-card__header spacing-below-35">
      <div class="spacing-below-35">
        <%= image_tag("pen-emoji.png") %>
      </div>
      <h2 class="form-card__title">Add a parent or guardianâ€™s signature.</h2>
    </div>
    <div class="form-card__content">
      <div class="grid">
        <div class="grid__item">
          <p class="text--left">Type your full legal name here to sign this form. By entering your name you agree you have been honest on this form.</p>
        </div>
      </div>
      <div class="grid">
        <div class="grid__item text--left">
          <%= f.cfa_input_field(:signature, "") %>
        </div>
      </div>
      <div class="form-card__footer">
        <%= f.button "Continue", class: "button button--primary" %>
      </div>
    </div>
  <% end %>
<% end %>
